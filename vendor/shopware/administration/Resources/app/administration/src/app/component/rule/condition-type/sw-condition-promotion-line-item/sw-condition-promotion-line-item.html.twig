{% block sw_condition_value_content %}
<div class="sw-condition-promotion-line-item sw-condition__condition-value">
    {% block sw_condition_promotion_line_item_field_operator %}
    <sw-condition-operator-select
        v-bind="{ operators, condition }"
        :disabled="disabled"
    />
    {% endblock %}

    {% block sw_condition_promotion_line_item_field_identifier %}
    <sw-entity-multi-select
        entity="promotion"
        size="medium"
        :disabled="disabled"
        :entity-collection="promotions"
        :criteria="promotionCriteria"
        :context="promotionContext"
        @change="setIds"
    />
    {% endblock %}
</div>
{% endblock %}
